<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<greeter id="theme">
<style font="DejaVu Sans 10" window-text-color="#333333"
base-color="#fafafa" alternate-base-color="#ffffff"
text-color="#333333" disabled-text-color="#333333"
base-alpha="0" 
disabled-base-color="#dcdcdc"
disabled-base-alpha="0" 
disabled-highlight-alpha="0"
frame="false" />
<item type="svg" id="background" background="true">
<normal file="simpliX.svgz" scalemode="crop"/>
<pos x="0" y="0" width="100%" height="100%"/>
</item>

<item type="pixmap" id="system-session">
<normal file="loginwindow.png"/>
<pos anchor="c" x="50%" y="50%" width="230" height="165"/>
</item>

<item type="rect" id="system-session">
<pos anchor="c" x="50%" y="50%" width="230" height="165"/>
<fixed>
<item type="pixmap">
<pos anchor="c" x="50%" y="40%"/>
<normal file="entry.png"/>
<prelight file="entry.png"/>
<active file="entry.png"/>
</item>
<item type="pixmap">
<pos anchor="c" x="20%" y="40%"/>
<normal file="user.png"/>
</item>

<item type="entry" id="user-entry">
<pos anchor="c" x="55%" y="40%" width="130" height="24"/>
</item>
</fixed>
</item>

<item type="rect" id="system-session">
<pos anchor="c" x="50%" y="50%" width="230" height="165"/>
<fixed>
<item type="pixmap">
<pos anchor="c" x="50%" y="65%"/>
<normal file="entry.png"/>
<prelight file="entry.png"/>
<active file="entry.png"/>
</item>
<item type="pixmap" button="true">
<pos anchor="c" x="20%" y="65%"/>
<normal file="pw.png"/>
</item>

<item type="entry" id="pw-entry">
<pos anchor="c" x="55%" y="65%" width="130" height="24"/>
</item>
</fixed>
</item>	
<item type="rect" id="system-session">
<pos anchor="c" x="50%" y="50%" width="230" height="165"/>
<fixed>
<item type="label">
<pos x="50%" y="16%" anchor="c"/>
<normal font="DejaVu Sans 9" color="#fafafa"/>
<text>%c</text>
</item>
<item type="pixmap" id="system_button" button="true">
<normal file="buttonClose.png"/>
<prelight file="buttonCloseHover.png"/>
<active file="buttonCloseHover.png"/>
<pos x="11%" y="15%" anchor="c"/>
</item>
<item type="pixmap" id="session_button" button="true">
<normal file="buttonMenu.png"/>
<prelight file="buttonMenuHover.png"/>
<active file="buttonMenuHover.png"/>
<pos x="16%" y="15%" anchor="c"/>
</item>
</fixed>
</item>
<item type="rect" id="caps-lock-warning">
<pos anchor="c" x="50%" y="50%" width="230" height="165"/>
<fixed>
<item type="label" id="message">
<normal color="#333333" font="Sans Bold 10"/>
<pos anchor="C" x="50%" y="83%"/>
<stock type="caps-lock-warning"/>
</item>
</fixed>
</item>
</greeter>
